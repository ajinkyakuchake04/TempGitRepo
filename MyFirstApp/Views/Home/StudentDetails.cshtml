    @*Razor Code Block*@

        @{ 
            string StudentResult;
            if (ViewBag.Marks >= 35)
            {
                StudentResult = "Pass";
            }
            else
            {
                StudentResult = "Fail";
            }
        }
    @*Razor Code Block*@

    <div class="container-fluid">
        <table class="table">
            <tr>
                <td>Student ID</td>
                <td>@ViewBag.StudentId</td>
            </tr>
            <tr>
                <td>Student Name</td>
                <td>@ViewBag.StudentName</td>
            </tr>
            <tr>
                <td>Marks</td>
                <td>@ViewBag.Marks</td>
            </tr>
            <tr>
                <td>Result</td>
                <td>@StudentResult</td>
            </tr>
            <tr>
                <td colspan="2">
                    @if (StudentResult == "Pass")
                    {
                        <span class="text-success">Congratulations!!! You have passed</span>
                    }
                    else
                    { 
                       <span class="text-danger">Better Luck Next Time!!!</span>
                    }
                </td>
            </tr>
            <tr>
                <td>Semesters</td>
                <td>
                    <ul>
                        @for (int i = 1; i <= ViewBag.NoOfSemesters; i++)
                        {
                            <li>@i</li>
                        }
                    </ul>
                </td>
            </tr>
            <tr>
                <td>Subjects</td>
                <td>
                    <ul>
                        @foreach (var item in ViewBag.Subjects)
                        {
                            <li>@item</li>
                        }
                    </ul>
                </td>
            </tr>
        </table>
    </div>

</body>
</html>
